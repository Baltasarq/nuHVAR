<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission
        android:name="android.permission.BLUETOOTH_SCAN"
        android:minSdkVersion="31"
        android:usesPermissionFlags="neverForLocation"
        tools:targetApi="s" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <uses-feature android:name="android.hardware.bluetooth_le" />
    <uses-feature android:name="android.software.companion_device_setup" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nuhvar"
        tools:targetApi="31">
        <activity
            android:name=".view.SettingsActivity"
            android:exported="false" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.devbaltasarq.nuhvar.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider_paths" />
        </provider>

        <service
            android:name=".core.bluetooth.BleService"
            android:enabled="true" />

        <activity
            android:name=".view.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Nuhvar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.ResultsActivity"
            android:theme="@style/Theme.Nuhvar"></activity>
        <activity
            android:name=".view.showresult.ResultViewerActivity"
            android:theme="@style/Theme.Nuhvar"></activity>
        <activity
            android:name=".view.PerformExperimentActivity"
            android:theme="@style/Theme.Nuhvar"></activity>
        <activity
            android:name=".view.experiment.TestHRDevice"
            android:theme="@style/Theme.Nuhvar"></activity>
        <activity
            android:name=".view.experiment.ExperimentDirector"
            android:theme="@style/Theme.Nuhvar"></activity>
    </application>

</manifest>